{
    "manifest_version": 3,
    "name": "Text Saver",
    "version": "1.0",
    "description": "Save selected text, grouped by site, with URL and timestamp.",
    "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "assets/icon.png",
      "32": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  }
  